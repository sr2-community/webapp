{
  "name": "sr2-client",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --maxWorkers=1 --watch --coverage --verbose --colors",
    "test:ci": "jest --ci"
  },
  "dependencies": {
    "i18next": "^21.8.7",
    "next": "12.1.6",
    "next-i18next": "^11.0.0",
    "next-themes": "^0.2.0",
    "react": "^18",
    "react-dom": "^18",
    "react-i18next": "^11.16.9"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5",
    "@testing-library/react": "^13",
    "@types/node": "17.0.38",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-sonarjs": "^0.13.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "lint-staged": "^13.0.0",
    "prettier": "^2.6.2",
    "sass": "^1.52.1",
    "typescript": "4.7.2"
  },
  "babel": {
    "presets": [
      [
        "next/babel",
        {
          "preset-env": {
            "targets": "> 0.25%"
          },
          "transform-runtime": {},
          "styled-jsx": {},
          "class-properties": {}
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      [
        "@babel/plugin-proposal-class-properties",
        {
          "loose": false
        }
      ]
    ]
  }
}
